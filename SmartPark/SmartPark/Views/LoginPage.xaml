<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SmartPark.Views.LoginPage" Title="SmartPark" WidthRequest="20" Padding="20" BackgroundColor="#448ACA">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="50" VerticalOptions="Center">
            <Entry Placeholder="Email" BackgroundColor="White"></Entry>
            <Entry Placeholder="Password" BackgroundColor="White" IsPassword="True"></Entry>
            <Button Text="Login" TextColor="Black" BackgroundColor="#D5E4F3"/>
            <Label HorizontalOptions="Start" Text="Forgotten Password?" TextColor="White" FontSize="Small" TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TapCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
