<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartPark.Views.SignUpPage" Title="Sign Up"
             Padding="20">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="25" VerticalOptions="Center">
            <Image Source="Icon_SmartPark.png" HeightRequest="100"></Image>
            <Label HorizontalOptions="Center" Text="SmartPark" TextColor="#448ACA" FontSize="Title" ></Label>
            <Entry Placeholder="Email" x:Name="EntryEmail"></Entry>
            <Entry Placeholder="Password" IsPassword="True" x:Name="EntryPassword"></Entry>
            <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="EntryPasswordConfirm"></Entry>
            <Button Text="Sign Up"
                    Clicked="OnSignupClicked"
                    BackgroundColor="#D5E4F3">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
