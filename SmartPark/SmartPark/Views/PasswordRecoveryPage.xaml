    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="50" VerticalOptions="Center">
            <Entry x:Name="Password_Recovery_Email" Placeholder="Email" BackgroundColor="White"/>
            <Button Text="Send Temporary Password" TextColor="Black" BackgroundColor="#D5E4F3"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
